rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for admin status
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /users/{userId} {
      // Admins can list all users.
      // Individual users can read, create, and update their own document.
      allow list, get: if isAdmin();
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      
      // Admins can update any user document.
      allow update: if isAdmin();
    }

    match /users/{userId}/scripts/{scriptId} {
      // Users can manage their own scripts.
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
