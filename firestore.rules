
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para a coleção de usuários
    match /users/{userId} {
      // Usuários autenticados podem criar seu próprio documento
      allow create: if request.auth != null;

      // Usuários autenticados podem ler, atualizar e deletar apenas seu próprio documento
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      
      // Administradores podem listar (ler) todos os documentos de usuários
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;

      // Regras para a subcoleção de roteiros
      match /scripts/{scriptId} {
        // Usuários autenticados podem gerenciar (criar, ler, atualizar, deletar) apenas seus próprios roteiros
        allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Regra de grupo para permitir que administradores leiam todos os roteiros de todos os usuários
    match /{path=**}/scripts/{scriptId} {
        allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
